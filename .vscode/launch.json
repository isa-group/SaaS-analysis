{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Extract analytics for all pricings",
            "runtimeExecutable": "ts-node",
            "args": [
                "${workspaceFolder}/src/scripts/extract-analytics.ts"
            ],
            "port": 9229,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**"],
            // "outFiles": ["${workspaceFolder}/dist/**/*.js"] - To see compiled files when debugging
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Extract analytics for a single pricing",
            "runtimeExecutable": "ts-node",
            "args": [
                "${workspaceFolder}/src/scripts/extract-analytics-from-file.ts",
                "./data/pricings/yaml/2019/clockify.yml"
            ],
            "port": 9229,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**"],
            // "outFiles": ["${workspaceFolder}/dist/**/*.js"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test pricing parsing",
            "runtimeExecutable": "ts-node",
            "args": [
                "${workspaceFolder}/src/scripts/parse-pricing-to-new-file.ts",
                "./data/pricings/yaml/real/github/2024.yml"
            ],
            "port": 9229,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**"],
            // "outFiles": ["${workspaceFolder}/dist/**/*.js"]
        }
    ]
}
